<h1>Editing display</h1>

<% form_for(@display) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_area :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :quantity_available %><br />
    <%= f.text_field :quantity_available %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @display %> |
<%= link_to 'Back', displays_path %>
